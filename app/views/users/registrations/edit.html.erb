<%content_for :title, "User | Edit profile"%>
<div class="container">
<h2 class="text-center">Edit Profile</h2>

<%= form_for(current_user, url: registration_path(current_user), html: { method: :put },class:"form-signin") do |f| %>
  <%= render "devise/shared/error_messages" %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class:'form-control'%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true, class:'form-control'%>
  </div>

  <% if devise_mapping.confirmable? && current_user.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= current_user.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password",class:'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control' %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password",class:'form-control' %>
  </div>

  
  <div class="field">
    <%= f.label :avatar %><i>You can change your avatar here</i><br>
    <%= f.file_field :avatar,class:'form-control-file my-3 p3' %>
  </div>

  <div class="field">
  <%=f.label :role%>
    <%= select_tag(:role, options_for_select(
      [['admin', 'admin'], ['editor', 'editor'], ['normal_user', 'normal_user']],'normal_user'
    ),class:'form-control my-3') %>
  </div>

  <div class="actions">
      <%= f.submit class:"btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<h3 class='text-center my-3'>Cancel my account</h3>

<%= button_to "Delete my account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-primary form-control" %>

<%= link_to "Back", :back ,class:'btn btn-lg btn-primary btn-block my-3'%>
</div>